extends template

block content
  div.container
    div.row
      div.col.s12.center-align
        include letters.pug

    div.row
      div.col.s12
        h4 Departments/Programs

    div.row
      div.col.s12
        table.striped.dept-list
          tr
            th(style="width: 4%")
            th(style="width: 23%") Department/Program
            th(style="width: 25%") Department/Program URL
            th(style="width: 23%") Parent Department/Program
            th.center-align(style="width: 10%") Total Members
            each dept in dept_list
              tr
                td.center-align
                  a(href="departments/" + dept.group_id + "/rss")
                    span.icon.ion-social-rss
                td
                  a(href="/departments/" + dept.group_id)= dept.group_name
                td
                  a(href=dept.url, target='_blank')= dept.url
                td
                  a(href="/departments/" + dept.parent_id)= dept.parent_name
                if dept.cnt
                  td.center-align= dept.cnt
                else
                  td.center-align 0

    div.row
      div.col.s12.center-align
        include letters.pug
