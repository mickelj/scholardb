extends template

block content
  div.row
    div.col.s12
      h4= journal.name
  div.row
    div.col.s12.m6.detail-profile-sidebar
      div.row
        p.headline Active #{appconf.orgshortname} Contributors to #{journal.name}
        include scholar_cards.pug

      div.row.moreinfo
        p.headline More Information
        ul.collapsible(data-collapsible="accordion")
          if journal.publisher_id 
            li
              div.col.s5
                b Publisher:
              div.col.s7 
                a(href="/publishers/", journal.publisher_id)= journal.publisher_name
          if journal.identifiers
            li
              div.col.s5
                b Identifiers:
              div.col.s7
                each ident in journal.identifiers
                  div= ident.identifier
          if romeo.numhits > 0 && journal.ident_type == "ISSN"
            include romeo.pug
          else
            li
              div
                div.col.s5
                  b Not found in RoMEO:
                div.col.s7
                  a(href="http://www.sherpa.ac.uk/forms/new-journal.php?la=en&fIDnum=%7C&mode=simple&service-identifier=romeo&form-context-url=http%3A%2F%2Fwww.sherpa.ac.uk%2Fromeo%2Fsearch.php", target="_blank") Suggest addition to RoMEO database 


    div.col.s12.m6.detail-works
      p.headline Works Found: #{total_works}
      include works_block.pug
