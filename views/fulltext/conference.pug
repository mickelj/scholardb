- searchurl  = appconf.appurls.linkresolver + '?ctx_ver=Z39.88-2004&rft_val_fmt=info%3Aofi%2Ffmt%3Akev%3Amtx%3A'
if work_detail.identifier_type == 'ISSN'
  - searchurl += 'journal&rft.genre=conference&rft.atitle=' + encodeURIComponent(work_detail.work_title).replace(/%20/g, '+') + '&rft.jtitle=' + encodeURIComponent(work_detail.publication).replace(/%20/g, '+') + '&rft.date=' + work_detail.year + '&rft.issn=' + work_detail.identifier + '&rft.volume=' + (work_detail.volume ? work_detail.volume : '') + '&rft.issue=' + (work_detail.issue ? work_detail.issue : '') + '&rft.spage=' + (work_detail.start_page ? work_detail.start_page : '') + '&rft.epage=' + (work_detail.end_page ? work_detail.end_page : '')
  each contrib in work_detail.contributors
    - searchurl += '&rft.au=' + encodeURIComponent(contrib.display_name)
else
  - searchurl += 'book&rft.genre&rft.atitle=' + encodeURIComponent(work_detail.work_title).replace(/%20/g, '+') + '&rft.btitle=' + encodeURIComponent(work_detail.publication).replace(/%20/g, '+') + '&rft.date=' + work_detail.year + '&rft.isbn=' + work_detail.identifier
  each contrib in work_detail.contributors
    - searchurl += '&rft.au=' + encodeURIComponent(contrib.display_name)
