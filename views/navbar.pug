if user
  ul#profile-menu.dropdown-content
    li
      a(href="/people/" + user.id) My Works
    li
      a(href="/user") My Profile
    li.divider
    li
      a(href="/auth/logout") Logout
        span.material-icons.right exit_to_app

div.navbar-fixed
  nav.blue.darken-4
    div.nav-wrapper
      a.brand-logo(href="/")
        img(src=appconf.images.logo, alt=appconf.appname)
      a.sidenav-trigger(href="#", data-target="mobile-menu")
        i.material-icons menu
      ul.right.hide-on-med-and-down
        li
          a(href="/") Home
        li
          a(href="/works") Works
        li
          a(href="/departments") Departments &amp; Programs
        li
          a(href="/people") People
        li
          a(href="/publications") Journals
        li
          a(href="/publishers") Publishers
        if user
          li
            a.btn.white.blue-text.text-darken-4.dropdown-trigger(href="#!", data-target="profile-menu") #{user.first_name} #{user.last_name}
              i.material-icons.right arrow_drop_down
          if user.admin
            li
              a.btn.red.white-text.darken-4(href="/admin") Admin
                i.material-icons.right security
        else
          li
            a.btn.white.blue-text.text-darken-4(href="/auth/login") Login
              i.material-icons.right input

      div#mobile-menu.sidenav.collection
        a.collection-item(href="/") Home
        a.collection-item(href="/works") Works
        a.collection-item(href="/departments") Departments &amp; Programs
        a.collection-item(href="/people") People
        a.collection-item(href="/publications") Journals
        a.collection-item(href="/publishers") Publishers
        if user
          a.collection-item(href="/people/" + user.id) My Works
          a.collection-item(href='/user') My Profile
          if user.admin
            a.collection-item.red.darken-4.white-text(href="/admin") Admin Console
              i.material-icons.left security
        else
          a.btn.white.blue.darken-4.white-text(href="/user") Login
            i.material-icons.right input
