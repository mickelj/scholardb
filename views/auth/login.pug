extends ../template

block content
  div.row
    div.col.s12.m8.l6.offset-m2.offset-l3
      p.headline Login to #{appconf.customtext.appname}
  div.row
    form.col.s12.m8.l6.offset-m2.offset-l3(method="post", action="/auth/login")
      div.row
        div.input-field.col.s12
          i.material-icons.prefix account_circle
          input#username.validate(type="text", name="username")
          label(for="username") #{appconf.customtext.orgshortname} Username
      div.row
        div.input-field.col.s12
          i.material-icons.prefix verified_user
          input#password.validate(type="password", name="password")
          label(for="password") Password
      p.row
        div.col.s6
          button.btn-flat.waves-effect.waves-red(type="reset") Clear Form
        div.col.s6.right-align
          button.btn.blue.darken-4.waves-effect.waves-light(type="submit") Login 
            i.material-icons.right check_circle
  
  include ../popups.pug
